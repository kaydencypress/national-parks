<%- include("../partials/header-park-nav") %>

<div class="row justify-content-center">
	<% if (parkData.images) { %>
		<div id="carouselExampleControls" class="carousel slide my-5" data-ride="carousel" data-interval=false>
			<div class="carousel-inner">
				<% for (var i=0; i<parkData.images.length; i++){ %>
				  <% if (i===0) { %>
						<div class="carousel-item active">
							<img class="d-block w-100 img-fluid" src="<%= parkData.images[i].url%>" alt="<%= parkData.images[i].title%>">
							<div class="carousel-caption d-none d-md-block">
								<h4><%= parkData.images[i].title%></h4>
								<h5>Photo by: <%= parkData.images[i].credit%></h5>
								<p><%= parkData.images[i].caption%></p>
							</div>
						</div>
				  <% } else { %>
						<div class="carousel-item">
							<img class="d-block" src="<%= parkData.images[i].url%>" alt="<%= parkData.images[i].title%>">
							<div class="carousel-caption d-none d-md-block">
								<h4><%= parkData.images[i].title%></h4>
								<h5>Photo by: <%= parkData.images[i].credit%></h5>
								<p><%= parkData.images[i].caption%></p>
							</div>
						</div>
				  <% } %>
				<% } %>
				<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	<% } %>
	<div id="overview-description">
		<p><%= parkData.description%></p>
	</div>
</div>

<%- include("../partials/footer-park") %>


